const { data } = Astro.props;
console.log(data);
---

<article>
  <h1>{data.wine}</h1>
  <img src="/svg/winecard.svg" alt="" />

  <div class="card_text">
    <h2>Type: {data.type}</h2>
    <p>Grape:{data.grape}</p>

    <p>Location: {data.location}</p>
  </div>
  <h3>{data.price_wine} DKK</h3>
</article>

<style>
  article {
    background-color: #fffaf3;
    border-radius: 40px;
    border: 5px solid #9db999;
    padding-left: 40px;
    padding-right: 40px;
    margin-bottom: 40px;
    margin-left: 20px;
    margin-right: 20px;
  }

  article img {
    width: 100%;
  }

  h1 {
    color: rgba(35, 33, 136, 1);
  }
  h3 {
    border-top: 2px solid black;
    padding-top: 20px;
    text-align: center;
  }
  .card_text {
    padding-bottom: 10px;
    padding-top: 20px;
  }
</style>
