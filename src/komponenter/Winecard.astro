const { data } = Astro.props;
console.log(data);
---

<div class="grid_wine">
<div class="flip-card">
  <div style=`background-image: url(${data.wine_imgs})` class="flip-card-inner">

    <div class="flip-card-front">
      
<article>
  <h1>{data.wine}</h1>
  <img src="/svg/winecard.svg" alt="" />

  <div class="card_text">
    <h2>Type: {data.type}</h2>
    <p>Grape:{data.grape}</p>

    <p>Location: {data.location}</p>
  </div>
  <h3>{data.price_wine} DKK</h3>
</div>
</div>
</div>
  </article>
</div>



<style>


article {
    background-color: #fffaf3;
    border-radius: 40px;
