---
const { data } = Astro.props;
console.log(data.appetizers_img);

---



<div class="flip-card">
  <div style=`background-image: url(${data.appetizers_img})` class="flip-card-inner">

    <div class="flip-card-front">
      
<article>
  <div class="grid_app1">
    <h1>{data.appetizers}</h1>
  </div>
  <div class="grid_app2">
    <p>Price:{data.appetizers_price}</p>
  </div>
  <div class="grid_app3">
    <img src={"/svg/illustration_appetizers/" + data.appetizers_illustration} alt="" />
  </div>
    </div>
  </div>
  </article>




<style>

article img {
    width: 60%;
  } 

  .grid_app3 {
    padding-top: 10px;
  }


  .grid_app {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;

  }
  article {
    height: 150px;
    background-color: #fffaf3;
    border-radius: 40px;
    border: 5px solid #9db999;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
margin-bottom: 4%;
  }

  h1 {
   
    color: #232188;
    padding-top: 20px;
    font-size: 1.1rem;
    padding-left: 15%;
  }
  p {
    word-break: normal;
    padding-left: 20px;
    font-size: 1.5rem;
  }

  .flip-card {
  background-color: transparent;
  border: 1px solid #f1f1f1;
  perspective: 1000px; 
}


.flip-card-inner {
  transition: transform 2s;
  transform-style: preserve-3d;
  background-size: cover;
  background-position: 100%;
  border-radius: 40px;
  height: 100%; 
 
}


.flip-card:hover .flip-card-inner {
  transform: rotateY(180deg);
}


.flip-card-front, .flip-card-back {
  -webkit-backface-visibility: hidden; 
  backface-visibility: hidden;
}



@media (min-width: 868px) {
  
  article img {
    width: 70%;
    
  }
  .grid_app {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  article {
    height: 160px;
    background-color: #fffaf3;
    border-radius: 40px;
    border: 5px solid #9db999;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin-bottom: 0%;
  }


  h1 {
    color: #232188;
    
    font-size: 1.5em;
    padding-left: 20%;
    padding-right: 10%;
    padding-top: 0;
  }
  p {
    word-break: normal;
  }
</style>
