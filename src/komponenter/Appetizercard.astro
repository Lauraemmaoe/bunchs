<style>
  .grid_app {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }
  article {
    background-color: #fffaf3;
    border-radius: 40px;
    border: 5px solid #9db999;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  h1 {
    border-right: 2px solid #232188;
    color: #232188;
    padding-top: 20px;
    font-size: 1.5rem;
    padding-left: 20%;
  }
</style>
