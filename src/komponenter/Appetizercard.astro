---

<article>
  <div class="grid_app">
    <div class="grid_app1">
      <h1>{data.appetizers}</h1>
    </div>
    <div class="grid_app2">
      <p>Price:{data.appetizers_price}</p>
    </div>
    <div class="grid_app3">
      <img src={data.appetizers_illustration} alt="" />
    </div>
  </div>
