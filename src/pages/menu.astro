---
import WineButton from "../komponenter/WineButton.astro";
import AppertizersButton from "../komponenter/AppetizersButton.astro";
import "../style/style.css";
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout>
  <div class="menu_grid">
    <div class="menu_text">
      <h1>Check out our menu,</h1>
      <p>
        Indulge in a delightful selection of wines perfectly paired with delectable appetizers. <br />From artisanal cheeses to savory charcuterie, our menu offers a tantalizing array of flavors to complement your wine experience. <br />Explore our offerings and treat your palate to a journey of taste sensations at our winebar!
      </p>
    </div>
    <div class="menu_illustration">
      <img src="/svg/twowineglass.svg" alt="" />
    </div>
  </div>

  <div class="bottoms_menu">
    <div class="bottom_menu_1">
      <a href="wine.astro">
        <WineButton />
      </a>
    </div>
    <div class="bottom_menu_2">
      <a href="appetizers.astro">
        <AppertizersButton />
      </a>
    </div>
  </div>

  <img src="pic_trulli.jpg" alt="Forside billede" />
</MainLayout>

<style>
  .menu_illustration img {
    max-width: 100%;
    height: auto;
    margin-left: 52%;
  }
  p {
    margin-left: 10px;
    margin-top: 40px;
  }
  h1 {
    margin-top: 60px;
    margin-left: 10px;
  }

  /* Tablet og desktop styling */

  @media only screen and (min-width: 800px) {
    .bottoms_menu {
      display: flex;
      justify-content: center;
    }

    .bottom_menu_1,
    .bottom_menu_2 {
      width: 40%;
      margin-top: 10%; /* Juster efter behov */
    }

    h1 {
      font-size: 4rem;
    }

    .menu_grid {
      margin-top: 10%;
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .menu_text {
      grid-column: 1;
    }

    .menu_illustration img {
      max-width: 100%;
    }
  }
</style>
