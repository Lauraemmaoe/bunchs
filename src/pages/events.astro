import Header from "../komponenter/Header.astro";
import "../style/style.css";
import BookEventsButton from "../komponenter/BookEventsButton.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Header />
    <div class="grid_event1">
      <div class="grid_event1_1">
        <img src="" alt="" />
      </div>
      <div class="grid_event1_2">
        <h1>Indulge in,</h1>
        <p>
          .. the Magic of Music, Words, and Wine Tasting at Bunchs Wine Bar!
        </p>
      </div>
    </div>

    <div class="grid_event2">
      <div class="grid_event2_1">
        <h1>Upcoming events</h1>
        <p>Discover our cultural events at Bunchs Wine Bar!</p>
        <p>
          Join us for our organic and biodynamic wines alongside atmospheric
          jazz evenings and engaging literary readings.
        </p>
        <p>
          Experience the magic of music and words in our cozy atmosphere. We
          look forward to welcoming you to unforgettable cultural experiences!
        </p>
      </div>
      <div class="grid_event2_2">
        <img src="" alt="" />
      </div>
    </div>

    <div class="grid_event3">
      <div class="grid_event3_1">
        <h1>If you have FOMO,</h1>
        <p>
          .. then keep yourself updated on the latest news and events on our
          social media platforms or sign up for our newsletter
        </p>
        <p>to ensure you never miss out on the excitement.</p>
        <p>Stay in the loop with Bunchs Wine Bar</p>
      </div>
      <div class="grid_event3_2">
        <img src="" alt="" />
      </div>
    </div>
    <BookEventsButton />

    <Footer />
  </body>
</html>
